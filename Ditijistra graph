#include <bits/stdc++.h>
using namespace std;

int main() {
	int n;
	cin>>n;
	
	vector<vector<int>>graph(n,vector<int>(n));
	for(int i=0;i<n;i++){
	    for(int j=0;j<n;j++){
	        cin>>graph[i][j];
	    }
	}
	int src;
	cin>>src;
	
	vector<int>dist(n,INT_MAX);
	vector<bool>visited(n,false);
	dist[src]=0;
	
	for(int c=0;c<n;c++){
	    int u=-1;
	    
	    for(int i=0;i<n;i++){
	        if(!visited[i] && (u==-1 || dist[i]<dist[u])){
	            u=i;
	        }
	        visited[u]=true;
	        
	        
	        for(int v=0;v<n;v++){
	            if(graph[u][v]!=0 && !visited[v]){
	                if(graph[u][v]+dist[u]<dist[v]){
	                    dist[v]=graph[u][v]+dist[u];
	                }
	            }
	        }
	    }
	    cout<<"Virtex\tDiistance of Souurce";
	    for(int i=0;i<n;i++){
	        cout<<i<<"\t\t\t"<<dist[i]<<" "<<endl;
	    }
	    return 0;
	}

}



output:

3
0 2 5
2 0 1
5 1 0
0
